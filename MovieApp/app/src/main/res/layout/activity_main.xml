<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8E6"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="114dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/video_camera"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"


            />

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/watchlist"
             android:layout_gravity="center_horizontal"
             android:paddingEnd="50dp"
             />

        <Button
            android:id="@+id/actMain_showList_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m_show"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:onClick="onShowListClick"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m_add"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#FF7F50"
            android:onClick="onAddNewWatchClick"
            />




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>